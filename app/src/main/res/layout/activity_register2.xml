<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:context=".register2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:text="Open Account"
            android:textColor="@color/back"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:text="Basic Information"
            android:textColor="@color/back"
            android:textSize="20dp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            >
        <EditText
            android:id="@+id/name1"
            android:layout_width="300dp"
            android:editable="false"
            android:focusable="false"
            android:hint="Full Name"
            android:layout_height="40dp"
            android:textColorHint="@color/back"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:maxLength="30"
            android:maxLines="1"
            android:background="@color/white"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            >
        <EditText
            android:id="@+id/phone1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPersonName"
            android:textColorHint="@color/back"
            android:hint="Father's Name"
            android:gravity="bottom"
            android:maxLength="30"
            android:maxLines="1"
            android:background="@color/white"
           />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="34dp"
                android:id="@+id/date"
                android:src="@drawable/date"
                android:layout_marginTop="4dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dob"
        android:digits="/1234567890"
        android:inputType="date"
        android:layout_marginLeft="4dp"
        android:textColorHint="@color/back"
        android:gravity="bottom"
        android:maxLength="10"
        android:maxLines="1"
        android:background="#ffffff"
        android:layout_marginTop="4dp"
        />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Gender"
                android:textColor="@color/back" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/back"
                    tools:layout_marginLeft="20dp"
                    android:onClick="radioButtonClicked"/>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Female"
                    android:onClick="radioButtonClicked"
                    android:textColor="@color/back" />
            </RadioGroup>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:text="Contact Details"
            android:textColor="@color/back"
            android:textSize="20dp" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/phone2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/back"
            android:gravity="bottom"
            android:digits="0987654321"
            android:editable="false"
            android:focusable="false"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="10"
            android:background="@color/white"
            android:hint="Phone number"
          />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/email2"
            android:layout_width="300dp"
            android:hint="Email"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:inputType="textEmailAddress"
            android:background="@color/white"
            android:maxLines="1"
            android:editable="false"
            android:focusable="false"
            android:digits="abcdefghijklmnopqrstuvwxy.z1234567890!@#$*ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="30"
            android:textColorHint="@color/back"

           />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:hint="Address"
            android:gravity="top"
            android:digits=" abcdefghi.jklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPostalAddress"
            android:textColorHint="@color/back"
            tools:translationX="@dimen/activity_vertical_margin"
            android:maxLines="3"
            android:maxLength="50"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/pincode"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:hint="PinCode"
            android:gravity="bottom"
            android:digits="1234567890"
            android:inputType="textPostalAddress"
            android:textColorHint="@color/back"
            tools:translationX="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:maxLength="6"

          />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:text="Identification Information"
            android:textColor="@color/back"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/number"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:hint="Required number"
            android:gravity="bottom"

            android:digits="1234567890"
            android:inputType="number"
            android:textColorHint="@color/back"
            tools:translationX="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:maxLength="12"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/pannumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:gravity="bottom"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="number"
            android:textColorHint="@color/back"
            tools:translationX="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:maxLength="12"
            android:layout_marginTop="4dp"
            android:hint="Pan Number"
           />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:text="Account Details"
            android:textColor="@color/back"

            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Account type"

                tools:layout_width="130dp" />

            <Spinner
                android:id="@+id/account_type"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                tools:layout_width="160dp"></Spinner>


        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
        <EditText
            android:id="@+id/income"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:inputType="number"
            android:digits="1234567890"
            android:textColorHint="@color/back"
            tools:translationX="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:maxLength="12"
            android:hint="Yearly HouseHold Income"
           />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">
            <EditText
                android:id="@+id/bal"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:inputType="number"
                android:digits="1234567890"
                android:textColorHint="@color/back"
                tools:translationX="@dimen/activity_vertical_margin"
                android:maxLines="1"
                android:maxLength="12"
                android:hint="Add Money"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rst"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round"
                android:text="Reset"

                android:textColor="#ffffff" />

            <Button
                android:id="@+id/create"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round"
                android:text="Create Account"
                android:textColor="#ffffff"
                tools:layout_width="130dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>